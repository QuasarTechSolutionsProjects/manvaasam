<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">



         <TextView
        android:id="@+id/create"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:background="@drawable/cta_button2"
        android:gravity="center"
        android:text="Create Package"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

         <TextView
             android:id="@+id/track"
             android:layout_width="290dp"
             android:layout_height="52dp"
             android:background="@drawable/cta_button2"
             android:gravity="center"
             android:text="Track Package"
             android:textColor="#FFFFFF"
             android:textSize="25sp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.79" />

         <androidx.appcompat.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="409dp"
             android:layout_height="65dp"
             android:background="#D5D5D5"
             android:minHeight="?attr/actionBarSize"
             android:theme="?attr/actionBarTheme"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.666"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent">

             <ImageView
                 android:id="@+id/imageView6"
                 android:layout_width="128dp"
                 android:layout_height="50dp"
                 android:foregroundGravity="left"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.056"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintVertical_bias="0.023"
                 app:srcCompat="@drawable/manvaslogo" />

         </androidx.appcompat.widget.Toolbar>

         <TextView
             android:id="@+id/search"
             android:layout_width="290dp"
             android:layout_height="52dp"
             android:text="Search Package"
             android:textColor="#FFFFFF"
             android:textSize="25sp"
             android:gravity="center"
             android:background="@drawable/cta_button2"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/track" />
     </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>